<!DOCTYPE html>
<html lang="fr_FR">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('CSS/StyleBase.css') }}">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div id="titre">
                <h1>Sortir.com</h1>
            </div>
            {% if app.user %}
            <nav>
                <ul>
                    {% block nav %}
                    {% endblock %}
                    <a href="{{ path('sortir_profil') }}"><li>Mon profil</li></a>
                    {% if app.user.administrateur is same as(true) %}
                        <a href=""><li>Gestion des Villes</li></a>
                        <a href=""><li>Gestion des Campus</li></a>
                    {% endif %}
                    <a href="{{ path('logout_sortir') }}"><li>Déconnection</li></a>
                </ul>
            </nav>
            {% endif %}

        </header>
        {% block body %}{% endblock %}
    </body>
</html>
