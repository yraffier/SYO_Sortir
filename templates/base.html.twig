<!DOCTYPE html>
<html lang="fr_FR">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% block stylesheets %}

        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div id="titre">
                <h1>Sortir.com</h1>
            </div>

            {% if app.user %}
            <nav class="navMenu">
                <ul>
                    {% block nav1 %}
                    {% endblock %}
                    {% block nav2 %}
                        <a href="{{ path('sortir_profil') }}"><li>Mon profil</li></a>
                        <a href="{{ path('logout_sortir') }}"><li>DÃ©connection</li></a>
                    {% endblock %}
                </ul>
            </nav>
                <div class="dot"></div>
            {% endif %}

        </header>
        <div>
            {% for messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert ">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {% block body %}
        {% endblock %}

{#        <footer class="footer">#}
