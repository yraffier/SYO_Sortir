{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet"  href="{{ asset('build/app.css') }}">
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="login-box">
        <h2>Connection</h2>
        <a href="{{ path('app_forgot_password_request') }}"> mot de passe oubli√©</a>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('logout_sortir') }}">Logout</a>
                </div>
            {% endif %}
            <div class="user-box">
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                <label for="inputUsername">Pseudo</label>
            </div>
            <div class="user-box">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <label for="inputPassword">Mot de Passe</label>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="user-box">
                <input type="checkbox" id="_remember_me" name="_remember_me">
                <label for="_remember_me">Souviens-toi ...</label>
            </div>

            <div class="user-box">
                    <button type="submit" >
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        Connection
                    </button>
            </div>

        </form>
    </div>





